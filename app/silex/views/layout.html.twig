<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Write your own adventure</title>

    <!-- Bootstrap -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/components/flat-ui-official/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/components/flat-ui-official/css/flat-ui.css">

    <style>
        body { padding-top: 10px; }
    </style>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-inverse" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
                    <span class="sr-only">Toggle navigation</span>
                </button>
                <a class="navbar-brand" href="{{ path('home') }}">Choosy</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-01">
                <p class="navbar-text">Choose your own adventure</p>

                {% if app.user %}
                    <p class="navbar-text navbar-right">Hi, <a href="{{ path('dashboard') }}">{{ app.user.username }}</a>! <a href="{{ logout_path }}">Bye</a></p>
                {% else %}
                    <p class="navbar-text navbar-right"><a href="{{ login_paths.twitter }}">Login with Twitter</a></p>
                {% endif %}
            </div><!-- /.navbar-collapse -->
        </nav><!-- /navbar -->

        <!-- Inverse look -->
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Dropdown<span class="caret"></span></button>
            <span class="dropdown-arrow dropdown-arrow-inverse"></span>
            <ul class="dropdown-menu dropdown-inverse">
                <li><a href="{{ path('my-played-stories') }}">Playing stories</a></li>
                <li><a href="{{ path('my-written-stories') }}">Writing stories</a></li>
            </ul>
        </div>

        {% block content %}
        <div class="row">
            <div class="col-xs-3">
            </div>

            <div class="col-xs-3">
                <div class="tile">
                    <img src="/components/flat-ui-official/images/icons/svg/compas.svg" alt="Compas" class="tile-image big-illustration">
                    <h3 class="tile-title">Play & Fun</h3>
                    <p>Enjoy exciting stories </p>
                    <a class="btn btn-primary btn-large btn-block" href="{{ path('read') }}">Go ahead!</a>
                </div>
            </div>

            <div class="col-xs-3">
                <div class="tile">
                    <img src="/components/flat-ui-official/images/icons/svg/pencils.svg" alt="Pencils" class="tile-image">
                    <h3 class="tile-title">Write & Share</h3>
                    <p>Create awesome adventures</p>
                    <a class="btn btn-primary btn-large btn-block" href="{{ path('add-story') }}">I'm an author!</a>
                </div>
            </div>

            <div class="col-xs-3">
            </div>
        </div>
        {% endblock %}
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/components/flat-ui-official/js/jquery-1.10.2.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="/components/flat-ui-official/js/bootstrap.min.js"></script>
</body>
</html>
